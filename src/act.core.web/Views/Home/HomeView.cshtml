@model act.core.web.Models.Home.Home
@{
    ViewBag.Title = "Home";
}
@section css{
    <style type="text/css">
        div.carousel-inner div.carousel-item { background-size: cover; background-repeat: no-repeat; background-position: 50% 50%; background-image: url(@Url.Content("~/img/pexels-photo.jpg")); width: 100%; height: 500px; }
        div.carousel-inner div.carousel-item div.carousel-caption ul.list-group { background: transparent; }
        div.carousel-inner div.carousel-item div.carousel-caption ul.list-group li.list-group-item { background: transparent; border: none; }
    </style>
}
@section nocontainer
{
    <div id="carousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#carousel" data-slide-to="0" class="active"></li>
            <li data-target="#carousel" data-slide-to="1"></li>
            <li data-target="#carousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <div class="carousel-caption">
                    <h3>Asset Compliance Tracker (ACT)</h3>
                    <a href="@Url.Logon()" class="btn btn-lg btn-primary">Log On</a><br/><br/>

                </div>
            </div>
            <div class="carousel-item">
                <div class="carousel-caption">
                    <h3>Bringing Together</h3>
                    <ul class="list-group">
                        <li class="list-group-item">DevOps</li>
                        <li class="list-group-item">Platform</li>
                        <li class="list-group-item">Security</li>
                        <li class="list-group-item">Firewall</li>
                    </ul>
                    <a href="@Url.Logon()" class="btn btn-lg btn-primary">Log On</a><br/><br/>

                </div>
            </div>
            <div class="carousel-item">
                <div class="carousel-caption">
                    <h3>Get Started</h3>
                    <a href="@Url.Logon()" class="btn btn-lg btn-primary">Log On</a><br/>
                    <br/>
                </div>
            </div>
        </div>

        <!-- Controls -->
        <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}